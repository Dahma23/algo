// the length of sentense
ALGORITHM sentense_length
VAR
    str:STRING ;
    i: INTEGER ;
BEGIN
    FOR i in str 
        write (str)
    END_FOR
END

//the number of words in the sentense 
ALGORITHM word_number
VAR
 str : STRING ; 
 Nbword : INTEGER : =1 ;
 i : INTEGER : =0 ;
BEGIN
 FOR i < str.length
    if (str[i]= " ") then
    Nbword = Nbword + 1 ;
    i=i+1
    END_if
 END_FOR
 write (Nbword)
END

//the number of vowels in the sentense 
 ALGORITHM vowels
 VAR
  i,nbr : INTEGER ;
  str : STRING ;
  BEGIN
  nbr =0 ;
  for i=0 < str.length, i++
  if (str[i] = 'a' || str [i]= 'e' || str [i] = 'i' || str [i] = 'o' || str = 'u' ) then
  END_if 
  END_FOR
  write (nbr)
END